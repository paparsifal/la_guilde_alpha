---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-guild-primary mb-8 text-center">Contactez-nous</h1>

    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-lg shadow-md p-8">
        <form class="space-y-6">
          <div>
            <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
            <input
              type="text"
              id="nom"
              name="nom"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-guild-secondary focus:border-guild-secondary"
            >
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-guild-secondary focus:border-guild-secondary"
            >
          </div>

          <div>
            <label for="sujet" class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
            <select
              id="sujet"
              name="sujet"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-guild-secondary focus:border-guild-secondary"
            >
              <option value="">Sélectionnez un sujet</option>
              <option value="rejoindre">Rejoindre une table de jeu</option>
              <option value="mj">Devenir Maître du Jeu</option>
              <option value="evenement">Participer à un événement</option>
              <option value="autre">Autre demande</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-guild-secondary focus:border-guild-secondary"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-guild-secondary text-white px-6 py-3 rounded-lg hover:bg-guild-primary transition-colors font-semibold"
          >
            Envoyer le message
          </button>
        </form>
      </div>

      <div class="mt-12 bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-guild-primary mb-4">Informations pratiques</h2>
        
        <div class="space-y-4">
          <div>
            <h3 class="font-semibold mb-1">Adresse</h3>
            <p class="text-gray-600">
              Association La Guilde Alpha<br>
              MJC/MTP du Laü<br>
              81 avenue du Loup<br>
              64000 PAU
            </p>
            <a 
              href="https://maps.app.goo.gl/S8D2iEcYKZZuC9hr5" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="inline-flex items-center text-guild-secondary hover:text-guild-primary mt-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              Voir sur Google Maps
            </a>
          </div>

          <div>
            <h3 class="font-semibold mb-1">Email</h3>
            <p class="text-gray-600">contact@guildealpha.com</p>
          </div>

          <div>
            <h3 class="font-semibold mb-1">Horaires d'ouverture</h3>
            <p class="text-gray-600">
              Mardi au Vendredi : 18h - 23h<br>
              Samedi et Dimanche : 14h - 23h<br>
              Fermé le Lundi
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
